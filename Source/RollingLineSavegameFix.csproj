<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\banner.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="RegexMatcher" Version="1.0.7" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="NAudio">
      <HintPath>..\Libraries\NAudio.dll</HintPath>
    </Reference>
    <Reference Include="SharpMikNAudio">
      <HintPath>..\Libraries\SharpMikNAudio.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\banner.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\music.xm">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
